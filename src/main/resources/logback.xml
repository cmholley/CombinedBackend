<?xml version="1.0" encoding="utf-8"?>
<!DOCTYPE project>
<configuration>
	<appender name="STDOUT" class="ch.qos.logback.core.ConsoleAppender">
    	<!-- encoders are assigned the type
         	ch.qos.logback.classic.encoder.PatternLayoutEncoder by default -->
    	<encoder>
      		<pattern>%d [%thread] %-5level %logger{35} - %msg %n</pattern>
    	</encoder>
    	<filter class="ch.qos.logback.classic.filter.ThresholdFilter">
			<level>TRACE</level>
		</filter>
  	</appender>
  	
  	<appender name="FILE" class="ch.qos.logback.core.rolling.RollingFileAppender">
		<file>/var/log/tomcat/webapps/combined-backend.log</file>
		<rollingPolicy class="ch.qos.logback.core.rolling.TimeBasedRollingPolicy">
      		<!-- rollover daily -->
			<fileNamePattern>/var/logs/tomcat/webapps/combined-backend-%d{yyyy-MM-dd}.%i.log</fileNamePattern>
			
			<timeBasedFileNamingAndTriggeringPolicy class="ch.qos.logback.core.rolling.SizeAndTimeBasedFNATP">
                <maxFileSize>5MB</maxFileSize>
            </timeBasedFileNamingAndTriggeringPolicy>

			<!-- keep 30 days' worth of history -->
			<maxHistory>30</maxHistory>
		</rollingPolicy>
		<encoder>
			<pattern>%d [%thread] %-5level %logger{35} - %msg %n</pattern>
		</encoder>
	</appender>

  	<!-- Application specific logs only go to file -->
	<logger name="dash" additivity="false">
		<level value="DEBUG" />
		<appender-ref ref="FILE" />
	</logger>
	<!-- Suppress Info from other libraries -->
	<logger name="org.hibernate">
		<level value="WARN" />
		<appender-ref ref="STDOUT" />
	</logger>

	<root>
		<level value="INFO" />
		<appender-ref ref="STDOUT" />
	</root>
</configuration> 