<?xml version="1.0" encoding="utf-8"?>
<!DOCTYPE hibernate-configuration SYSTEM 
"http://www.hibernate.org/dtd/hibernate-configuration-3.0.dtd">

<hibernate-configuration>
	<session-factory>
		<property name="hibernate.dialect">
			org.hibernate.dialect.MySQLDialect
		</property>
		<property name="hibernate.connection.driver_class">
			com.mysql.jdbc.Driver
		</property>
		<property name="hibernate.connection.url">
			jdbc:mysql://localhost:3306/CHWApp?allowMultiQueries=true
		</property>
		<property name="hibernate.connection.username">
			sqluser
		</property>
		<property name="hibernate.connection.password">
			hs@SQL2011
		</property>
		<property name="hibernate.hbm2ddl.auto">
			update
		</property>		
		<mapping class="dash.pojo.Class"/>
		<mapping class="dash.pojo.Comment"/>
		<mapping class="dash.pojo.Group"/>
		<mapping class="dash.pojo.Hour"/>
		<mapping class="dash.pojo.Location"/>
		<mapping class="dash.pojo.Message"/>
		<mapping class="dash.pojo.Post"/>
		<mapping class="dash.pojo.Task"/>
		<mapping class="dash.pojo.User"/>
	</session-factory>
</hibernate-configuration>